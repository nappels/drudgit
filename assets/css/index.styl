$footerHeight = 100px;
$lightGray = #f4f4f4;
$grayBorder = #e4e4e4;
$blue = #2790B0;
$green = rgba(148,186,101, .65);
$greenHover = rgba(148,186,101, .95);
$borderRadius = 3px;

// Custom Fonts

@font-face
  font-family: 'HelveticaNeue';
  src: url('../fonts/HelveticaNeueLTStd-Roman.eot');
  src: local('☺'), url('../fonts/HelveticaNeueLTStd-Roman.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;

@font-face
  font-family: 'HelveticaNeueBold';
  src: url('../fonts/HelveticaNeueLTStd-Bd.eot');
  src: local('☺'), url('../fonts/HelveticaNeueLTStd-Bd.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;

@font-face
  font-family: 'ProximaNova';
  src: url('../fonts/ProximaNova-Regular.eot');
  src: local('☺'), url('../fonts/ProximaNova-Regular.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;

@font-face
  font-family: 'ProximaNovaBold';
  src: url('../fonts/ProximaNova-Bold.eot');
  src: local('☺'), url('../fonts/ProximaNova-Bold.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;



html
body
  margin:0
  padding:0
  font: 100% 'HelveticaNeue', Helvetica;
  background:#f4f4f4;

h2
.h2
  font-size:1.8em;
  margin:10px 0 8px;
  font-family: 'ProximaNovaBold';

  &.float
    float:left;

a
  text-decoration:none;

header
  width:100%;

  .header
    font-size:1.2em;
    padding:10px 0;
    background: $blue;
    // border-bottom: 1px solid $grayBorder;
    text-align:center;
    color:#fcfcfc;

  .nav
    padding:15px 0;
    // margin-bottom:10px;
    // border-bottom: 1px solid $grayBorder;
    // box-shadow:0px 0 2px #ccc;
    position:relative;
    background:#fff;
    overflow:hidden;

    .mainNav
      float:left;

    .item
      display:inline-block;
      margin-left:80px;
      font-size:1.2em;
      color:#666;
      cursor:pointer;

      a
        color:#666;

      &.active
        &:after
          content:"";
          float:left;
          margin-top:5px;
          margin-right:3px;
          height:10px;
          width:10px;
          border-radius:5px;
          background: $blue;

      &:first-child
        margin-left:35px;

    .hamburger
      float:right;
      margin:6px 20px 0 0;

      .bun
        float:left;
        margin-right:3px;
        height:7px;
        width:7px;
        border-radius:7px;
        border: 2px solid $blue;

    .placeHolder
      display:none;
      position:relative;
      top:11px;
      margin-left: 61px;
      width: 20px; 
      height: 20px; 
      transform: rotate(45deg);
      background: #fcfcfc;
      box-shadow: inset 0px 0 1px #ccc;

#body
  float:left;

  &.narrow
    width:65%;
  
  &.wide
    width:100%;

#aside
  float:right;
  width:200px;
  background:#fff;
  padding-left:20px;
  color:#333;
  font-size:.9em;

  .userPic
    height:50px;
    width:50px;
    border-radius:5px;

  .logout
    border: 1px solid #e4e4e4;
    float: left;
    padding: 10px 28px;
    background: rgba(39,144,176,.8)
    margin: 10px 0;
    color:#fff;
    cursor:pointer;
    border-radius:$borderRadius;
    border-bottom:4px solid $blue;

.signUpForm
.signInForm
  width: 270px;
  margin: 50px auto;
  background: #fcfcfc;
  padding: 20px;
  box-shadow: inset 0px 0px 1px #ccc;
  border-radius: 3px;

  .input
    background:#fff;
    border:1px solid #e4e4e4;

.page
  width:96%;
  margin:10px auto;

  .section
    float:left;
    width:100%;
    margin:0 0 40px;

.dashBox
  font-size: 1.8em;
  // box-shadow: 0 0 1px #ccc;
  float: left;
  padding:37px 51px;
  cursor: pointer;
  color:#333;
  text-align:center;
  font-family:'ProximaNova';
  border-radius:$borderRadius;

  &.info
    background: #fff;
    padding: 15px 38px;
    box-shadow: 0 0 1px #999;
    margin-right: 10px
    line-height:1.3em;

    .amount
      font-family: 'ProximaNovaBold';


  &.add
    background: $green;
    color:#fff;

    &:hover
      background: $greenHover;

.sessionBox
  background: rgba(210,108,34,.65);
  float: left;
  color: #fff;
  padding: 25px 75px;
  font-size: 1.2em;
  cursor: pointer;
  border-bottom: 4px solid rgba(210,108,34,.95);
  border-radius: $borderRadius;

.newClient
  a
    display:block;
    margin-left: 30px;
    float: left;
    padding: 14px 47px 10px;
    background: rgba(115, 115, 115, .75);
    color:#f4f4f4;
    border-radius: $borderRadius;
    cursor: pointer;
    border-bottom:4px solid rgba(115, 115, 115, .95);

.clientsTable
  clear: both;
  width:100%;
  float: left;
  margin-top: 25px;

table
  width: 100%;

  th
    text-align:left;
    padding:0 0 10px 10px;
  
  td
    border-bottom: 1px solid #e4e4e4;
    padding: 12px 10px;

.submit
  background: #e4e4e4;
  border: none;
  padding: 20px 0;
  margin: 8px 0;
  width: 270px;
  outline: none;
  font-size: 1.2em;
  display: block;
  cursor:pointer;
  border-bottom:4px solid #ccc;
  color:$blue;
  border-radius:$borderRadius;

.input
  background: #fcfcfc;
  border: 1px solid #e4e4e4;
  padding: 20px 10px;
  margin: 8px 0;
  width: 250px;
  outline: none;
  font-size: 1.2em;
  display: block;
  border-radius:$borderRadius;

