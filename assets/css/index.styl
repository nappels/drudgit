$footerHeight = 100px;
$lightGray = #f4f4f4;
$grayBorder = #e4e4e4;
$blue = #2790B0;
$green = rgba(148,186,101, .65);
$greenHover = rgba(148,186,101, .95);
$borderRadius = 2px;

// Custom Fonts

@font-face
  font-family: 'HelveticaNeue';
  src: url('../fonts/HelveticaNeueLTStd-Roman.eot');
  src: local('☺'), url('../fonts/HelveticaNeueLTStd-Roman.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;

@font-face
  font-family: 'HelveticaNeueBold';
  src: url('../fonts/HelveticaNeueLTStd-Bd.eot');
  src: local('☺'), url('../fonts/HelveticaNeueLTStd-Bd.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;

@font-face
  font-family: 'ProximaNova';
  src: url('../fonts/ProximaNova-Regular.eot');
  src: local('☺'), url('../fonts/ProximaNova-Regular.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;

@font-face
  font-family: 'ProximaNovaBold';
  src: url('../fonts/ProximaNova-Bold.eot');
  src: local('☺'), url('../fonts/ProximaNova-Bold.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;



html
body
  margin:0
  padding:0
  font: 100% 'HelveticaNeue', Helvetica;
  background:#fcfcfc;

h2
.h2
  font-size:1.8em;
  margin:10px 0 8px;
  font-family: 'ProximaNovaBold';

  &.float
    float:left;

a
  text-decoration:none;

header
  width:100%;

  .header
    font-size:1.2em;
    padding:10px 0;
    background: $blue;
    // border-bottom: 1px solid $grayBorder;
    text-align:center;
    color:#fcfcfc;

  .nav
    padding:15px 0;
    margin-bottom:10px;
    // border-bottom: 1px solid $grayBorder;
    box-shadow:0px 0 2px #ccc;
    position:relative;
    background:#fff;
    overflow:hidden;

    .mainNav
      float:left;

    .item
      display:inline-block;
      margin-left:80px;
      font-size:1.2em;
      color:#666;
      cursor:pointer;

      a
        color:#666;

      &.active
        &:after
          content:"";
          float:left;
          margin-top:5px;
          margin-right:3px;
          height:10px;
          width:10px;
          border-radius:5px;
          background: $blue;

      &:first-child
        margin-left:35px;

    .hamburger
      float:right;
      margin:6px 20px 0 0;

      .bun
        float:left;
        margin-right:3px;
        height:7px;
        width:7px;
        border-radius:7px;
        border: 2px solid $blue;

    .placeHolder
      display:none;
      position:relative;
      top:11px;
      margin-left: 61px;
      width: 20px; 
      height: 20px; 
      transform: rotate(45deg);
      background: #fcfcfc;
      box-shadow: inset 0px 0 1px #ccc;
