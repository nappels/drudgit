.page
  width:98%;
  margin:0 auto;

  .section
    float:left;
    width:100%;
    margin:20px 0;

.dashBox
  font-size: 1.8em;
  // box-shadow: 0 0 1px #ccc;
  float: left;
  padding:37px 51px;
  cursor: pointer;
  color:#333;
  text-align:center;
  font-family:'ProximaNova';
  border-radius:$borderRadius;

  &.info
    background: #fff;
    padding: 15px 38px;
    box-shadow: 0 0 1px #999;
    margin-right: 10px
    line-height:1.3em;

    .amount
      font-family: 'ProximaNovaBold';


  &.add
    background: $green;
    color:#fff;

    &:hover
      background: $greenHover;

.sessionBox
  background: rgba(210,108,34,.65);
  float: left;
  color: #fff;
  padding: 25px 75px;
  font-size: 1.2em;
  cursor: pointer;
  border-bottom: 4px solid rgba(210,108,34,.95);
  border-radius: $borderRadius;

.newClient
  a
    display:block;
    margin-left: 30px;
    float: left;
    padding: 14px 47px 10px;
    background: rgba(115, 115, 115, .75);
    color:#f4f4f4;
    border-radius: $borderRadius;
    cursor: pointer;
    border-bottom:4px solid rgba(115, 115, 115, .95);

.clientsTable
  clear: both;
  float: left;
  margin-top: 25px;

.input
  background: #f1f1f1;
  border: none;
  padding: 20px 10px;
  margin: 8px 0;
  width: 250px;
  outline: none;
  font-size: 1.2em;
  display: block;

